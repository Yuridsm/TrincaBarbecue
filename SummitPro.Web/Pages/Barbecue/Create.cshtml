@page
@model SummitPro.Web.Pages.Barbecue.CreateModel
@{
	Layout = "_Layout";
	var beginDateTime = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
	var endDateTime = DateTime.Now.AddDays(7).ToString("yyyy-MM-ddTHH:mm");
}

<form class="row needs-validation" method="post" id="create-barbecue-identifier" novalidate>
	@Html.AntiForgeryToken()
	<div class="container d-flex flex-column my-4 align-items-center">
		<h4>Create New Event</h4>

		<div class="col-6 my-3">
			<label asp-for="Barbecue.Description" class="form-label">Description</label>
			<input id="description" asp-for="Barbecue.Description" type="text" placeholder="Type a Description" class="form-control" autofocus required>

			<span id="description-error-message" class="text-danger" asp-validation-for="Barbecue.Description"></span>
		</div>

		<div class="col-6 my-3">
			<label asp-for="Barbecue.BeginDate" class="form-label">Begin DateTime</label>
			<input id="begin-datetime" class="form-control" value="@beginDateTime" asp-for="Barbecue.BeginDate" required>

			<span id="begin-datetime-error-message" class="text-danger" asp-validation-for="Barbecue.BeginDate"></span>
		</div>

		<div class="col-6 my-3 has-validation">
			<label asp-for="Barbecue.EndDateTime" class="form-label">End DateTime</label>
			<input id="end-datetime" asp-for="Barbecue.EndDateTime" type="datetime-local" class="form-control" value="@endDateTime" required>

			<span id="end-datetime-error-message" class="text-danger" asp-validation-for="Barbecue.EndDateTime"></span>
		</div>

		<div class="col-6 my-3">
			<label asp-for="Barbecue.AdditionalRemarks">Additional Remarks</label>
			<textarea id="additional-remarks" class="form-control" rows="3" asp-for="Barbecue.AdditionalRemarks">
				@string.Join("\n", Model.Barbecue.AdditionalRemarks)
			</textarea>
			<span asp-validation-for="Barbecue.AdditionalRemarks"></span>
		</div>

		<div class="col-6 my-3">
			<button class="btn btn-primary text-white my-3 shadow-lg rounded" type="submit">Create Event</button>
		</div>
	</div>
</form>

@section Scripts
	{
	<partial name="_ValidationScriptsPartial" />
}